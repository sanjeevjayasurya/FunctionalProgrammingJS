{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "functional"
    ],
    "rules": {
        "functional/no-this-expression": "error",
        "functional/immutable-data": "error"
    }        
}
